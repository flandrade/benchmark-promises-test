{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "noUnusedParameters": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}