{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "types": [ "jest" ]
  },
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}